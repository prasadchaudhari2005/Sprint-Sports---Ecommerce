<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Returns - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>

        <div class="container mt-5">
            <div class="mb-4">
                <a href="/admin" class="btn btn-outline-light btn-sm"><i class="fas fa-arrow-left me-2"></i> Back to
                    Dashboard</a>
            </div>
            <h2 class="text-white mb-4"><i class="fas fa-undo"></i> Manage Returns</h2>

            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Bill #</th>
                            <th>Product</th>
                            <th>Reason</th>
                            <th>Evidence</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% returns.forEach(ret=> { %>
                            <tr>
                                <td>
                                    <%= ret.return_id %>
                                </td>
                                <td>
                                    <%= ret.name %><br>
                                        <small class="text-muted">
                                            <%= ret.email %>
                                        </small>
                                </td>
                                <td>
                                    <%= ret.bill_id %>
                                </td>
                                <td>
                                    <%= ret.product_name %>
                                </td>
                                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;"
                                    title="<%= ret.reason %>">
                                    <%= ret.reason %>
                                </td>
                                <td>
                                    <% if (ret.image_url) { %>
                                        <a href="<%= ret.image_url %>" target="_blank">
                                            <img src="<%= ret.image_url %>" alt="Evidence"
                                                style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px; border: 1px solid #444;">
                                        </a>
                                        <% } else { %>
                                            <span class="text-muted small">No Image</span>
                                            <% } %>
                                </td>
                                <td>
                                    <%= new Date(ret.created_at).toLocaleDateString() %>
                                </td>
                                <td>
                                    <span
                                        class="badge bg-<%= ret.status === 'Approved' ? 'success' : (ret.status === 'Rejected' ? 'danger' : 'warning') %>">
                                        <%= ret.status %>
                                    </span>
                                </td>
                                <td>
                                    <% if (ret.status==='Requested' ) { %>
                                        <div class="d-flex gap-2">
                                            <form action="/admin/return-status" method="POST">
                                                <input type="hidden" name="returnId" value="<%= ret.return_id %>">
                                                <input type="hidden" name="status" value="Approved">
                                                <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                            <form action="/admin/return-status" method="POST">
                                                <input type="hidden" name="returnId" value="<%= ret.return_id %>">
                                                <input type="hidden" name="status" value="Rejected">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Reject">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <% } else { %>
                                            <span class="text-muted"><i class="fas fa-lock"></i></span>
                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                                <% if (returns.length===0) { %>
                                    <tr>
                                        <td colspan="8" class="text-center text-muted p-4">No return requests found.
                                        </td>
                                    </tr>
                                    <% } %>
                    </tbody>
                </table>
            </div>

            <div class="mt-4 text-center">
                <a href="/admin" class="btn btn-outline-light">Back to Dashboard</a>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>