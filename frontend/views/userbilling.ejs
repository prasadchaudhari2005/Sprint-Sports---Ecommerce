<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - Sprint Sport</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Main CSS -->
  <link rel="stylesheet" href="/style.css">
  <style>
    .return-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      display: none;
      z-index: 1050;
      justify-content: center;
      align-items: flex-start;
      padding-top: 20px;
      overflow-y: auto;
    }

    .return-modal.show {
      display: flex;
    }

    .return-modal-content {
      background: #1a1a1a;
      border: 2px solid #ffc107;
      border-radius: 10px;
      padding: 30px;
      width: 90%;
      max-width: 600px;
      box-shadow: 0 0 30px rgba(255, 193, 7, 0.3);
      animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }

      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .return-modal-header {
      border-bottom: 1px solid #333;
      margin-bottom: 20px;
      padding-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .return-modal-header h2 {
      color: #ffc107;
      margin: 0;
    }

    .close-modal {
      background: none;
      border: none;
      color: #ffc107;
      font-size: 24px;
      cursor: pointer;
    }

    .close-modal:hover {
      color: #ff9800;
    }

    .form-group-return {
      margin-bottom: 15px;
    }

    .form-group-return label {
      color: #ffc107;
      font-weight: bold;
      margin-bottom: 8px;
      display: block;
    }

    .form-group-return input[type="text"],
    .form-group-return textarea,
    .form-group-return input[type="file"] {
      background: #2a2a2a;
      border: 1px solid #444;
      color: #fff;
      padding: 10px;
      border-radius: 5px;
      width: 100%;
      font-family: inherit;
    }

    .form-group-return input[type="text"]:disabled {
      background: #1a1a1a;
      color: #fff;
      opacity: 1;
      cursor: not-allowed;
    }

    .form-group-return input[type="text"]:readonly {
      background: #2a2a2a;
      color: #fff;
      opacity: 1;
      cursor: default;
    }

    .form-group-return textarea {
      resize: vertical;
    }

    .form-group-return input[type="file"] {
      padding: 5px;
    }

    .form-row-return {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .submit-btn-return {
      background: #ffc107;
      color: #000;
      border: none;
      padding: 12px 30px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      width: 100%;
      margin-top: 20px;
      transition: all 0.3s;
    }

    .submit-btn-return:hover {
      background: #ff9800;
      transform: scale(1.02);
    }
  </style>
</head>

<body class="bg-dark text-white">

  <%- include('partials/header') %>

    <div class="container mt-5 mb-5" style="min-height: 60vh;">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title text-white">My Orders</h2>
        <a href="/" class="text-muted"><i class="fas fa-arrow-left"></i> Back to Shop</a>
      </div>

      <% bills.forEach(bill=> { %>
        <div class="order-card-dark mb-4 position-relative">
          <div
            class="d-flex flex-wrap justify-content-between align-items-center border-bottom border-secondary pb-3 mb-3">
            <div>
              <h4 class="text-primary mb-1">
                <i class="fas fa-receipt me-2"></i> Bill #<%= bill.bill_id %>
              </h4>
              <small class="text-muted">
                <i class="far fa-calendar-alt me-1"></i> Placed on <%= new Date(bill.bill_date).toLocaleDateString() %>
              </small>
            </div>
            <div class="text-end">
              <span
                class="badge bg-<%= bill.status === 'Delivered' ? 'success' : (bill.status === 'Pending' ? 'warning' : 'info') %> rounded-pill px-3 py-2">
                <%= bill.status %>
              </span>
            </div>
          </div>

          <div class="mb-3">
            <h6 class="text-white mb-2">Items Purchased:</h6>
            <p class="text-muted mb-0">
              <%= bill.items %>
            </p>
          </div>

          <div class="d-flex justify-content-between align-items-center bg-dark p-3 rounded"
            style="border: 1px solid #333;">
            <div class="d-flex flex-column">
              <% if (bill.subtotal && bill.discount_amount> 0) { %>
                <small class="text-muted">Subtotal: Rs <%= bill.subtotal %></small>
                <small class="text-success fw-bold">Money Saved: Rs <%= bill.discount_amount %></small>
                <% } %>
                  <h5 class="text-white mb-0 mt-1">Total: <span class="text-primary fw-bold">Rs <%= bill.total_amount %>
                    </span></h5>
                  <div style="font-size: 10px; color: #555;">Debug: ID=<%= bill.bill_id %> P1=<%= bill.p1 %> N1=<%=
                          bill.name1 %> ItemsLen=<%= bill.items.length %>
                  </div>
            </div>
            <div>
              <% if (bill.status==='Delivered' ) { %>
                <button class="btn btn-sm btn-outline-warning me-2"
                  onclick="openReturnModal('<%= bill.bill_id %>', '<%= bill.name1 || '' %>', '<%= bill.p1 || '' %>', '<%= bill.name2 || '' %>', '<%= bill.p2 || '' %>', '<%= bill.name3 || '' %>', '<%= bill.p3 || '' %>')">
                  <i class="fas fa-undo me-1"></i> Return Item
                </button>
                <% } %>
                  <a href="/download-invoice/<%= bill.bill_id %>" class="btn btn-sm btn-outline-success">
                    <i class="fas fa-file-invoice me-1"></i> Download Invoice
                  </a>
            </div>
          </div>
        </div>
        <% }) %>

          <% if (bills.length===0) { %>
            <div class="text-center py-5">
              <div class="display-1 text-muted mb-3"><i class="fas fa-box-open"></i></div>
              <h3 class="text-white">No orders yet</h3>
              <p class="text-muted">Looks like you haven't bought any gear yet.</p>
              <a href="/" class="neon-btn mt-3">Start Shopping</a>
            </div>
            <% } %>
    </div>

    <!-- Return Modal -->
    <div id="returnModal" class="return-modal">
      <div class="return-modal-content"
        style="background: #f8f9fa; border: none; color: #333; max-width: 500px; padding: 0; box-shadow: 0 10px 30px rgba(0,0,0,0.5);">

        <div class="p-4 border-bottom">
          <h4 class="mb-1" style="color: #4a4a4a; font-weight: 700; font-family: serif;"><i class="fas fa-undo me-2"
              style="color: #e67e22;"></i> Request Return</h4>
          <small class="text-muted" id="modalSubHeader">Reviewing items from Order #</small>
        </div>

        <div class="p-4">
          <form id="returnForm" action="/return-request" method="POST" enctype="multipart/form-data">
            <input type="hidden" id="billId" name="billId" value="">

            <div class="mb-4">
              <label class="form-label text-uppercase fw-bold text-muted" style="font-size: 0.8em;">Select
                Product(s)</label>
              <div id="productList" class="border rounded bg-white p-2">
                <!-- Checkboxes will be injected here -->
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label text-muted" style="font-size: 0.9em;">Please describe the issue..</label>
              <textarea name="reason" class="form-control" rows="3" placeholder="Wrong item / Damaged / Quality issue"
                required style="background: #fff; color: #333; font-size: 0.95em;"></textarea>
            </div>

            <div class="mb-4">
              <label class="form-label text-muted" style="font-size: 0.9em;">Upload Evidence (Image)</label>
              <input type="file" name="returnImage" class="form-control" accept="image/*" required>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn text-white fw-bold py-2"
                style="background: #d35400; border-radius: 25px;">SUBMIT REQUEST</button>
              <button type="button" class="btn btn-link text-muted text-decoration-none"
                onclick="closeReturnModal()">Cancel</button>
            </div>

          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script>
        function openReturnModal(billId, name1, id1, name2, id2, name3, id3) {
          // Set Bill ID
          document.getElementById('billId').value = billId;
          document.getElementById('modalSubHeader').textContent = `Reviewing items from Order #${billId}`;

          // Show modal
          document.getElementById('returnModal').classList.add('show');
          document.body.style.overflow = 'hidden';

          // Build items array
          const items = [];
          if (name1 && name1 !== '' && id1 && id1 !== '') items.push({ name: name1, id: id1 });
          if (name2 && name2 !== '' && id2 && id2 !== '') items.push({ name: name2, id: id2 });
          if (name3 && name3 !== '' && id3 && id3 !== '') items.push({ name: name3, id: id3 });

          const container = document.getElementById('productList');
          container.innerHTML = '';

          if (items.length > 0) {
            items.forEach(item => {
              const div = document.createElement('div');
              div.className = 'form-check p-2 border-bottom';
              div.innerHTML = `
                      <input class="form-check-input" type="checkbox" name="productIds[]" value="${item.id}" id="prod_${item.id}">
                      <label class="form-check-label ms-2" for="prod_${item.id}" style="color: #333; font-weight: 500;">
                          ${item.name}
                      </label>
                  `;
              container.appendChild(div);
            });
            // Remove last border
            if (container.lastElementChild) container.lastElementChild.classList.remove('border-bottom');
          } else {
            container.innerHTML = '<p class="text-danger small mb-0">No valid items found for this order.</p>';
          }
        }

        function closeReturnModal() {
          document.getElementById('returnModal').classList.remove('show');
          document.getElementById('returnForm').reset();
          document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.getElementById('returnModal').addEventListener('click', function (e) {
          if (e.target === this) {
            closeReturnModal();
          }
        });
      </script>
</body>

</html>