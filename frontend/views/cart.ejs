<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart - Sprint Sport</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <%- include('partials/header') %>

        <div class="container mt-5 mb-5" style="max-width: 1200px;">
            <div class="row">
                <!-- Left Column: Cart Items -->
                <div class="col-md-8">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="section-title text-white">Your Cart</h2>
                        <a href="/" class="text-muted text-decoration-none"><i class="fas fa-arrow-left"></i> Continue
                            Shopping</a>
                    </div>

                    <div class="order-card-dark mb-4">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Info</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product=> { %>
                                        <tr>
                                            <td class="align-middle" style="width: 120px;">
                                                <div
                                                    style="width: 80px; height: 80px; background: #fff; border-radius: 8px; padding: 5px; display: flex; align-items: center; justify-content: center;">
                                                    <img src="<%= product.img_url %>" alt="Product"
                                                        style="max-width: 100%; max-height: 100%; object-fit: contain;">
                                                </div>
                                            </td>
                                            <td class="align-middle text-start">
                                                <h5 class="mb-0 text-white">
                                                    <%= product.product_name %>
                                                </h5>
                                            </td>
                                            <td class="align-middle text-primary fw-bold">â‚¹<%= product.price %>
                                            </td>
                                            <td class="align-middle">
                                                <%= product.quantity %>
                                            </td>
                                            <td class="align-middle">
                                                <div class="btn-group">
                                                    <a href="/updatecartminus/<%= product.product_id %>"
                                                        class="btn btn-sm btn-outline-light"><i
                                                            class="fas fa-minus"></i></a>
                                                    <a href="/updatecartplus/<%= product.product_id %>"
                                                        class="btn btn-sm btn-outline-light"><i
                                                            class="fas fa-plus"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>

                                            <% if(products.length===0) { %>
                                                <tr>
                                                    <td colspan="5" class="text-center py-5 text-muted">Your cart is
                                                        empty.</td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Order Summary -->
                <div class="col-md-4">
                    <% if (products.length> 0) { %>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="section-title text-white">Order Summary</h2>
                        </div>
                        <div class="card bg-dark text-white border-secondary"
                            style="border-radius: 15px; position: sticky; top: 20px;">
                            <div class="card-body p-4">

                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Subtotal</span>
                                    <span>Rs <%= subtotal %></span>
                                </div>

                                <% if (discountPercent> 0) { %>
                                    <div class="d-flex justify-content-between mb-3 text-success">
                                        <span>Discount (<%= discountPercent %>%)</span>
                                        <span>- Rs <%= discountAmount %></span>
                                    </div>
                                    <% } else { %>
                                        <div class="d-flex justify-content-between mb-3 text-muted">
                                            <span>Discount</span>
                                            <span>Rs 0</span>
                                        </div>
                                        <% } %>

                                            <% if (nextOffer && nextOffer !=="Maximum discount applied!" ) { %>
                                                <div class="alert alert-warning mb-4" role="alert"
                                                    style="font-size: 0.9em;">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    <%= nextOffer %>
                                                </div>
                                                <% } else if (nextOffer==="Maximum discount applied!" ) { %>
                                                    <div class="alert alert-success mb-4" role="alert"
                                                        style="font-size: 0.9em;">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        <%= nextOffer %>
                                                    </div>
                                                    <% } %>

                                                        <hr class="border-secondary mb-3">

                                                        <div
                                                            class="d-flex justify-content-between align-items-center mb-4">
                                                            <span class="h5 mb-0">Total Amount</span>
                                                            <span class="h3 text-primary mb-0">Rs <%= total %></span>
                                                        </div>

                                                        <a href="/checkout" class="btn btn-danger w-100 py-3 fw-bold"
                                                            style="border-radius: 10px;">PROCEED TO CHECKOUT</a>
                                                        <div class="mt-3 text-center">
                                                            <button id="clearBtn"
                                                                class="btn btn-link text-muted text-decoration-none btn-sm">Clear
                                                                Cart</button>
                                                        </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

        <!-- Modal removed -->

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                const clearBtn = document.getElementById("clearBtn");

                if (clearBtn) {
                    clearBtn.addEventListener("click", function (event) {
                        event.preventDefault();
                        if (confirm("Are you sure you want to clear all items?")) {
                            fetch("/clear-cart", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" }
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        window.location.href = "/cart";
                                    } else {
                                        alert("Error: " + data.message);
                                    }
                                })
                                .catch(error => { console.error(error); });
                        }
                    });
                }
            </script>
</body>

</html>