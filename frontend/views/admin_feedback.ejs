<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Feedback - Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>

        <div class="container mt-5">
            <div class="mb-4">
                <a href="/admin" class="text-white text-decoration-none"><i class="fas fa-arrow-left me-2"></i> Back to
                    Dashboard</a>
            </div>
            <h2 class="text-white mb-4">User Feedback & Complaints</h2>

            <% if (feedback.length===0) { %>
                <div class="alert alert-info text-center">No feedback received yet.</div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-hover border-secondary">
                            <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% feedback.forEach(item=> { %>
                                    <tr>
                                        <td>
                                            <%= new Date(item.created_at).toLocaleDateString() %>
                                                <%= new Date(item.created_at).toLocaleTimeString() %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.email %>
                                        </td>
                                        <td>
                                            <%= item.subject %>
                                        </td>
                                        <td>
                                            <%= item.message %>
                                        </td>
                                        <td>
                                            <form action="/admin/feedback/delete/<%= item.feedback_id %>" method="POST"
                                                onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>