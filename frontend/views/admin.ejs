<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Sprint Sport</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Main CSS -->
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%- include('partials/admin-header') %>

    <!-- Dashboard -->
    <div class="container fade-in">
      <div class="row g-4 justify-content-center mt-4">

        <!-- See Bills -->
        <div class="col-md-3">
          <a href="/admin_bills" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-primary mb-3"><i class="fas fa-file-invoice-dollar"></i></div>
              <h4 class="text-white">View Orders</h4>
              <p class="text-muted small">Check customer bills & status</p>
            </div>
          </a>
        </div>

        <!-- Add Products -->
        <div class="col-md-3">
          <a href="/additems" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-success mb-3"><i class="fas fa-plus-circle"></i></div>
              <h4 class="text-white">Add Product</h4>
              <p class="text-muted small">Insert new items to inventory</p>
            </div>
          </a>
        </div>

        <!-- Manage Products -->
        <div class="col-md-3">
          <a href="/admin/manage-products" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-warning mb-3"><i class="fas fa-edit"></i></div>
              <h4 class="text-white">Update Product</h4>
              <p class="text-muted small">Edit prices, images & details</p>
            </div>
          </a>
        </div>

        <!-- Delete Products -->
        <div class="col-md-3">
          <a href="/admin/delete-product" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-danger mb-3"><i class="fas fa-trash-alt"></i></div>
              <h4 class="text-white">Delete Product</h4>
              <p class="text-muted small">Remove items from store</p>
            </div>
          </a>
        </div>

        <!-- View Feedback -->
        <div class="col-md-3">
          <a href="/admin/feedback" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-info mb-3"><i class="fas fa-comments"></i></div>
              <h4 class="text-white">View Feedback</h4>
              <p class="text-muted small">Read user complaints & messages</p>
            </div>
          </a>
        </div>

        <!-- Manage Returns -->
        <div class="col-md-3">
          <a href="/admin/returns" class="text-decoration-none">
            <div class="card bg-dark border-secondary h-100 text-center p-4 hover-neon">
              <div class="display-4 text-warning mb-3"><i class="fas fa-undo"></i></div>
              <h4 class="text-white">Manage Returns</h4>
              <p class="text-muted small">Handle return requests</p>
            </div>
          </a>
        </div>

      </div>
    </div>

    <%- include('partials/footer') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>