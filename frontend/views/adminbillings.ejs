<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Orders - Sprint Sport</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Main CSS -->
  <link rel="stylesheet" href="/style.css">
</head>

<body>

  <%- include('partials/admin-header') %>

    <div class="container mt-5 mb-5" style="max-width: 900px;">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title text-white mb-0">Manage Orders</h2>
        <a href="/admin" class="text-muted text-decoration-none"><i class="fas fa-arrow-left me-1"></i> Back to
          Dashboard</a>
      </div>

      <% bills.forEach(bill=> { %>
        <!-- Dark Theme Bill Card -->
        <div class="order-card-dark mb-4 position-relative">
          <div
            class="d-flex flex-wrap justify-content-between align-items-center border-bottom border-secondary pb-3 mb-3">
            <div>
              <h4 class="text-white mb-1">
                <i class="fas fa-receipt text-primary me-2"></i> Bill #<%= bill.bill_id %>
              </h4>
              <div class="text-muted small">
                <i class="fas fa-user me-1"></i>
                <%= bill.username %> &nbsp;|&nbsp;
                  <i class="fas fa-calendar-alt me-1"></i>
                  <%= new Date(bill.bill_date).toLocaleDateString() %>
              </div>
            </div>
            <div>
              <form action="/update-bill/<%= bill.bill_id %>" method="POST" class="d-flex align-items-center gap-2">
                <select name="status" class="form-select form-select-sm bg-dark text-white border-secondary">
                  <option value="Pending" <%=bill.status==="Pending" ? "selected" : "" %>>Pending</option>
                  <option value="Inprogress" <%=bill.status==="Inprogress" ? "selected" : "" %>>Inprogress</option>
                  <option value="Delivered" <%=bill.status==="Delivered" ? "selected" : "" %>>Delivered</option>
                </select>
                <button type="submit" class="btn btn-sm btn-success">
                  <i class="fas fa-check"></i>
                </button>
              </form>
            </div>
          </div>

          <div class="row mb-3 px-2">
            <div class="col-md-8">
              <h6 class="text-secondary small text-uppercase mb-1">Shipping To</h6>
              <div class="text-white small fw-bold">
                <%= bill.shipping_name || bill.username %>
              </div>
              <div class="text-muted small">
                <%= bill.shipping_address %>
              </div>
              <div class="text-muted small"><i class="fas fa-phone me-1"></i>
                <%= bill.shipping_phone %>
              </div>
            </div>
            <div class="col-md-4 text-end">
              <h6 class="text-secondary small text-uppercase mb-1">Payment Mode</h6>
              <span class="badge rounded-pill bg-<%= bill.payment_mode === 'COD' ? 'info' : 'primary' %>">
                <i class="fas fa-<%= bill.payment_mode === 'COD' ? 'truck' : 'credit-card' %> me-1"></i>
                <%= bill.payment_mode || 'Online' %>
              </span>
            </div>
          </div>

          <div class="table-responsive mb-3">
            <table class="table table-dark table-sm table-borderless mb-0">
              <thead>
                <tr class="text-muted border-bottom border-secondary">
                  <th>Item</th>
                  <th class="text-end">Qty</th>
                </tr>
              </thead>
              <tbody>
                <% if (bill.item1) { %>
                  <tr>
                    <td>
                      <%= bill.item1 %>
                    </td>
                    <td class="text-end">
                      <%= bill.q1 %>
                    </td>
                  </tr>
                  <% } %>
                    <% if (bill.item2) { %>
                      <tr>
                        <td>
                          <%= bill.item2 %>
                        </td>
                        <td class="text-end">
                          <%= bill.q2 %>
                        </td>
                      </tr>
                      <% } %>
                        <% if (bill.item3) { %>
                          <tr>
                            <td>
                              <%= bill.item3 %>
                            </td>
                            <td class="text-end">
                              <%= bill.q3 %>
                            </td>
                          </tr>
                          <% } %>
              </tbody>
            </table>
          </div>

          <div class="bg-dark p-3 rounded d-flex justify-content-between align-items-center">
            <div class="text-white">
              Status: <span
                class="badge bg-<%= bill.status === 'Delivered' ? 'success' : (bill.status === 'Pending' ? 'warning' : 'info') %>">
                <%= bill.status %>
              </span>
            </div>
            <div class="h5 text-primary mb-0">Total: â‚¹<%= bill.total_amount %>
            </div>
          </div>
        </div>
        <% }) %>

          <% if (bills.length===0) { %>
            <div class="text-center py-5">
              <p class="text-muted">No orders found matching your criteria.</p>
            </div>
            <% } %>

    </div>

    <%- include('partials/footer') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>