<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products - Sprint Sport</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('partials/admin-header') %>

        <div class="container mt-5 mb-5" style="max-width: 900px;">
            <div class="mb-4">
                <a href="/admin" class="text-white text-decoration-none"><i class="fas fa-arrow-left me-2"></i> Back to
                    Dashboard</a>
            </div>
            <h2 class="section-title text-white mb-4">Manage Product Prices</h2>

            <div class="order-card-dark">
                <% if (products && products.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Current Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(product=> { %>
                                    <tr>
                                        <td class="align-middle text-white fw-bold">
                                            <%= product.product_name %>
                                        </td>
                                        <td class="align-middle text-primary">Rs <%= Number(product.price).toFixed(2) %>
                                        </td>
                                        <td class="align-middle">
                                            <a href="/admin/edit-product/<%= product.product_id %>"
                                                class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <p class="text-muted">No products found in inventory.</p>
                        </div>
                        <% } %>
            </div>


        </div>

        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>